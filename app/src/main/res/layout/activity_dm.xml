<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".DmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_arrow_desc"
            app:tint="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/plus"
            android:contentDescription="@string/add_icon_desc"
            app:tint="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/search_background"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:contentDescription="Search Icon"
            app:tint="@color/dm_subtitle_color" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:hint="@string/search_hint"
            android:textSize="16sp"
            android:textColorHint="@color/dm_subtitle_color" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person2" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="@string/joshua_l" />
                    <TextView style="@style/DMSubtitle" android:text="@string/joshua_l_message" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="@string/message_time_now" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person1" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="@string/karennne" />
                    <TextView style="@style/DMSubtitle" android:text="@string/karennne_message" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="@string/message_time_now" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person4" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="@string/martini_rond" />
                    <TextView style="@style/DMSubtitle" android:text="@string/martini_message" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="@string/message_time_15m" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person5" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="qaidino804" />
                    <TextView style="@style/DMSubtitle" android:text="These hoes aint loyal" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="1hr ago" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person6" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="lisa" />
                    <TextView style="@style/DMSubtitle" android:text="Liked your message" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="68w ago" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout style="@style/DMItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/DMImage" android:src="@drawable/person7" />
                <LinearLayout style="@style/DMTextContainer">
                    <TextView style="@style/DMTitle" android:text="e3quals_mc2" />
                    <TextView style="@style/DMSubtitle" android:text="Wanna hop on Fortnite?" />
                </LinearLayout>
                <TextView style="@style/DMTime" android:text="12yr ago" />
                <ImageView style="@style/DMCameraIcon" android:src="@drawable/camera" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <!-- Material 3 Camera Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textSize="20dp"
            app:icon="@drawable/camera"
            app:iconSize="25dp"
            app:iconTint="@color/text_color"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="12dp"
            android:padding="12dp"
            android:textColor="@color/text_color"
            app:backgroundTint="@color/white" />
    </LinearLayout>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/CustomBottomNav"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/white"
        app:itemIconTint="@color/text_color" />

</LinearLayout>