<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".PersonaldmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/back_arrow_desc"
            app:tint="@color/text_color" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/person1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/karennne"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/video"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/video_call_desc"
            app:tint="@color/text_color" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/info"
            android:contentDescription="@string/info_desc"
            app:tint="@color/text_color" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_time"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/message_bubble_background"
                android:text="@string/hello_message"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/message_bubble_background"
                android:text="How are you?"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/camera"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/camera_input_desc"
            app:tint="@color/text_color" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/camera_icon"
            android:layout_toStartOf="@id/mic_icon"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/input_background"
            android:hint="@string/message_input_hint"
            android:textSize="16sp"
            android:textColorHint="@color/gray"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp" />

        <ImageView
            android:id="@+id/mic_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/voicerec"
            android:layout_toStartOf="@id/gallery_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:tint="@color/text_color" />

        <ImageView
            android:id="@+id/gallery_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/picture"
            android:layout_toStartOf="@id/smiley_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:tint="@color/text_color" />

        <ImageView
            android:id="@+id/smiley_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/stickers"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/text_color" />
    </RelativeLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/CustomBottomNav"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/white"
        app:itemIconTint="@color/text_color" />

</LinearLayout>