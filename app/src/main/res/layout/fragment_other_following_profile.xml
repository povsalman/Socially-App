<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/back_icon"
            android:src="@drawable/chevron_left"
            android:contentDescription="Back"
            app:tint="@color/text_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile_username"
            android:id="@+id/profile_name_top"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/options"
            android:contentDescription="Menu"
            app:tint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/person3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <TextView style="@style/ProfileStatsText" android:text="@string/profile_posts" />
            <TextView style="@style/ProfileStatsText" android:text="@string/profile_followers" />
            <TextView style="@style/ProfileStatsText" android:text="@string/profile_following" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <TextView style="@style/ProfileName" android:text="@string/profile_name" />
        <TextView style="@style/ProfileDescription" android:text="@string/profile_bio" />
        <TextView style="@style/ProfileWebsite" android:text="@string/profile_website" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/followed_by"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/followButton"
            style="@style/ProfileActionButton"
            android:text="@string/following_button"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            style="@style/ProfileActionButton"
            android:text="@string/message_button"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            style="@style/ProfileActionButton"
            android:text="@string/email_button"
            app:backgroundTint="@null" />


        <ImageView
            style="@style/ProfileActionIcon"
            android:src="@drawable/partnership"
            android:contentDescription="Add User" />
    </LinearLayout>


    <!-- Story Highlight Items (Horizontally Scrollable) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout style="@style/StoryHighlightItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/StoryHighlightImage" android:src="@drawable/exp14" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_friends" />
            </LinearLayout>

            <LinearLayout style="@style/StoryHighlightItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/StoryHighlightImage" android:src="@drawable/exp12" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_travel" />
            </LinearLayout>

            <LinearLayout style="@style/StoryHighlightItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/StoryHighlightImage" android:src="@drawable/exp20" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_food" />
            </LinearLayout>

            <LinearLayout style="@style/StoryHighlightItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/StoryHighlightImage" android:src="@drawable/exp11" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_pets" />
            </LinearLayout>

            <LinearLayout style="@style/StoryHighlightItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/StoryHighlightImage" android:src="@drawable/exp18" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_memories" />
            </LinearLayout>

            <LinearLayout style="@style/StoryHighlightItem">
                <TextView
                    android:id="@+id/circle_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ringcircle"
                    android:text="+"
                    android:textColor="@color/text_color"
                    android:textSize="30sp"
                    android:gravity="center" />
                <TextView style="@style/StoryHighlightText" android:text="@string/stories_new" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/grid"
            app:tint="@color/text_color" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/tag"
            app:tint="@color/gray" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/GridRow">
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp16" />
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp13" />
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp17" />
            </LinearLayout>

            <LinearLayout style="@style/GridRow">
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp18" />
                <FrameLayout style="@style/GridImageItem.Frame">
                    <ImageView style="@style/GridImageItem.Inner" android:src="@drawable/exp11" />
                    <ImageView style="@style/GridImageItem.Overlay" android:src="@drawable/highlight_slides" />
                </FrameLayout>
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp20" />
            </LinearLayout>

            <LinearLayout style="@style/GridRow">
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp15" />
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp10" />
                <ImageView style="@style/GridImageItem" android:src="@drawable/exp19" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>