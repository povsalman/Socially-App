<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tab_following"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/following_tab"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tab_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_tab"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/text_color"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Follow Requests Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow_requests"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/new_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person7" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/liked_your_photo"
                    android:layout_width="0dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exp4" />
            </LinearLayout>

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person3" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/started_following_you"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="@string/follow_button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/follow_button_background" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/today_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person6" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/liked_your_photo_multiple"
                    android:layout_width="0dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exp5" />
            </LinearLayout>

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person1" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/commented_on_post"
                    android:layout_width="0dp" />
                <LinearLayout style="@style/NotificationThumbnailsContainer">
                    <ImageView style="@style/NotificationThumbnail" android:src="@drawable/exp1" />
                    <ImageView style="@style/NotificationThumbnail" android:src="@drawable/exp2" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/this_week_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person2" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/started_following_you"
                    android:layout_width="0dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="@string/follow_button"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/follow_button_background" />
            </LinearLayout>

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person4" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/shared_your_story"
                    android:layout_width="0dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exp6" />
            </LinearLayout>

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person5" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/sent_you_message"
                    android:layout_width="0dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exp7" />
            </LinearLayout>

            <LinearLayout style="@style/NotificationItem">
                <de.hdodenhof.circleimageview.CircleImageView style="@style/NotificationImage" android:src="@drawable/person1" />
                <TextView style="@style/NotificationText" android:layout_weight="1" android:text="@string/liked_your_video"
                    android:layout_width="0dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exp8" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>