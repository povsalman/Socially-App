<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".StoryEditOwnActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/exp21"
            android:contentDescription="Story background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Leftmost close (cross) icon -->
                <ImageView
                    style="@style/StoryEditIcon"
                    android:src="@drawable/story_close"
                    android:layout_marginEnd="8dp" />

                <!-- Small gap -->
                <Space
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <!-- Container for all other icons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_download" />
                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_music" />
                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_filters" />
                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_picture" />
                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_stickers" />
                    <ImageView style="@style/StoryEditIcon" android:src="@drawable/story_text" />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Your Stories Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/your_stories_button_background">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/jacob_img"
                android:contentDescription="Your Stories Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Your Stories"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Close Friends Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/close_friends_button_background">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/close_friends_star"
                android:contentDescription="Close Friends Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Close Friends"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Send Arrow Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/next_circle"
            android:contentDescription="Send Story" />
    </LinearLayout>

</LinearLayout>