<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/main"
    tools:context=".StoryViewOwnActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/exp21"
            android:contentDescription="User story" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/story_username"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/story_time_ago"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            <ImageView
                style="@style/CloseIcon"
                android:src="@drawable/close"
                android:contentDescription="Close story" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout style="@style/BottomNavItem">
            <ImageView style="@style/BottomNavIcon" android:src="@drawable/eye_activity" />
            <TextView style="@style/BottomNavText" android:text="@string/bottom_activity" />
        </LinearLayout>
        <LinearLayout style="@style/BottomNavItem" android:layout_marginStart="18dp">
            <ImageView style="@style/BottomNavIcon" android:src="@drawable/reels" />
            <TextView style="@style/BottomNavText" android:text="@string/bottom_create" />
        </LinearLayout>
        <LinearLayout style="@style/BottomNavItem">
            <ImageView style="@style/BottomNavIcon" android:src="@drawable/facebook" />
            <TextView style="@style/BottomNavText" android:text="@string/bottom_facebook" />
        </LinearLayout>
        <LinearLayout style="@style/BottomNavItem">
            <ImageView style="@style/BottomNavIcon" android:src="@drawable/highlight_added" />
            <TextView style="@style/BottomNavText" android:text="@string/bottom_highlight" />
        </LinearLayout>
        <LinearLayout style="@style/BottomNavItem">
            <ImageView style="@style/BottomNavIcon" android:src="@drawable/options" />
            <TextView style="@style/BottomNavText" android:text="@string/bottom_more" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>