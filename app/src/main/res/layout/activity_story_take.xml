<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".StoryTakeActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/exp16"
        android:scaleType="centerCrop"
        android:contentDescription="Camera view background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings"
                android:contentDescription="Settings"
                app:tint="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/picture"
                android:contentDescription="@string/gallery_icon_desc"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/flash"
                android:layout_marginHorizontal="16dp"
                android:contentDescription="@string/flash_icon_desc"
                app:tint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/camera_capture_button"
                android:layout_marginHorizontal="16dp"
                android:contentDescription="@string/camera_capture_desc" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.5" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/switch_camera"
                android:layout_marginHorizontal="16dp"
                android:contentDescription="@string/camera_switch_desc"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/emoji"
                android:contentDescription="@string/smiley_desc"
                app:tint="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- Horizontally Scrollable Camera Options at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@color/transparent_black">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView style="@style/CameraOptionText" android:text="@string/camera_type" />
                <TextView style="@style/CameraOptionText" android:text="@string/camera_live" />
                <TextView style="@style/CameraOptionText" android:text="@string/camera_normal" android:textStyle="bold" />
                <TextView style="@style/CameraOptionText" android:text="@string/camera_boomerang" />
                <TextView style="@style/CameraOptionText" android:text="@string/camera_video" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>